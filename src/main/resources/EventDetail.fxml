<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EventDetailController">
    <children>
        <VBox layoutX="14.0" layoutY="29.0" prefHeight="362.0" prefWidth="572" spacing="10">
            <children>
                <Label fx:id="nameLabel" text="Name : " textFill="NAVY">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
                <Label fx:id="descriptionLabel" text="Description : " textFill="NAVY">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
                <Label fx:id="priceLabel" text="Price: " textFill="NAVY">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
                <Label fx:id="placesLabel" text="Places Available : " textFill="NAVY">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
                <Label fx:id="addressLabel" text="Address : " textFill="NAVY">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
                <Label text="Enter number of places to reserve :" textFill="NAVY">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
                <TextField fx:id="reservationPlacesField" prefHeight="26.0" prefWidth="341.0" promptText="Number of places">
               <font>
                  <Font size="14.0" />
               </font></TextField>
                <Button onAction="#handleReserveAction" text="Reserve" style="-fx-background-color: #1a73e8; -fx-text-fill: white;">
               <font>
                  <Font size="14.0" />
               </font>
                </Button>
                <Label fx:id="messageLabel" text="" />


            </children>
        </VBox>
    </children>
</AnchorPane>
