<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="507.0" prefWidth="687.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EventDetailController">
    <children>
        <VBox layoutX="14.0" layoutY="13.0" prefHeight="562.0" prefWidth="826.0" spacing="10">
            <children>
                <Label fx:id="nameLabel" text="Name : " textFill="NAVY">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font></Label>
                <Label fx:id="descriptionLabel" text="Description : " textFill="NAVY">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font></Label>
                <Label fx:id="priceLabel" text="Price: " textFill="NAVY">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font></Label>
                <Label fx:id="placesLabel" text="Places Available : " textFill="NAVY">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font></Label>
                <Label fx:id="addressLabel" text="Address : " textFill="NAVY">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font></Label>
                <Label text="Enter number of places to reserve :" textFill="NAVY">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font></Label>
                <TextField fx:id="reservationPlacesField" prefHeight="30.0" prefWidth="798.0" promptText="Number of places">
                    <font>
                        <Font size="14.0" />
                    </font></TextField>
                <Button onAction="#handleReserveAction" prefHeight="30.0" prefWidth="111.0" style="-fx-background-color: #1a73e8; -fx-text-fill: white;" text="Reserve">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Label fx:id="messageLabel" text="" />
                <Label fx:id="messageLabels" prefWidth="162.0" textFill="#bc1d1d" wrapText="true" />






                <Label text="Your Comment :">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Label>
                <TextArea fx:id="commentTextArea" prefHeight="58.0" prefWidth="826.0" />
                <Button onAction="#handleCommentSubmit" prefHeight="32.0" prefWidth="113.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Submit Comment" />
                <Label text="Comments :">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Label>
                <ListView fx:id="commentListView" prefHeight="64.0" prefWidth="826.0" />


            </children>
        </VBox>
    </children>
</AnchorPane>
