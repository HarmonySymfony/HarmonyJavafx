<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EvenementController">
    <children>
        <TableView fx:id="evenementTableView" layoutX="14.0" layoutY="14.0" onMouseClicked="#handleEvenementSelection" prefHeight="200.0" prefWidth="772.0">
            <columns>
                <TableColumn fx:id="columnNom" prefWidth="166.0" text="Nom" />
                <TableColumn fx:id="columnDescription" prefWidth="206.0" text="Description" />
                <TableColumn fx:id="columnPrix" prefWidth="137.0" text="Prix" />
                <TableColumn fx:id="columnPlaceDispo" prefWidth="130.0" text="Place Dispo" />
                <TableColumn fx:id="columnAdresse" prefWidth="205.0" text="Adresse" />
            </columns>
        </TableView>
        <VBox layoutX="14.0" layoutY="240.0" prefHeight="346.0" prefWidth="217.0" spacing="10.0">
            <children>
                <Label text="Nom:" />
                <TextField fx:id="NomField" />
                <Label text="Description:" />
                <TextField fx:id="DescriptionField" />
                <Label text="Prix:" />
                <TextField fx:id="PrixField" />
                <Label text="Place Dispo :" />
                <TextField fx:id="PlaceDispoField" />
                <Label text="Adresse:" />
                <TextField fx:id="AdresseField" />
                <HBox alignment="BASELINE_LEFT" prefHeight="33.0" prefWidth="217.0" spacing="10.0">
                    <children>
                        <Button fx:id="addButton" onAction="#addEvenement" text="Add" />
                        <Button fx:id="updateButton" onAction="#updateEvent" text="Update" />
                        <Button fx:id="deleteButton" onAction="#deleteEvenement" text="Delete" />
                        <Button fx:id="clearButton" onAction="#clearForm" text="Clear" />

                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
