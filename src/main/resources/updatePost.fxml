<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.updatePost">
    <children>
        <Label layoutX="27.0" layoutY="144.0" prefHeight="36.0" prefWidth="119.0" text="Contenu :">
            <font>
                <Font size="25.0" />
            </font>
        </Label>
        <TextArea fx:id="post_contenu" layoutX="155.0" layoutY="80.0" prefHeight="163.0" prefWidth="412.0" />
        <Label layoutX="27.0" layoutY="266.0" prefHeight="36.0" prefWidth="221.0" text="Publier en tant que:">
            <font>
                <Font size="25.0" />
            </font>
        </Label>
        <RadioButton fx:id="post_postedAs_username" layoutX="282.0" layoutY="284.0" mnemonicParsing="false" selected="true" text="Username">
            <font>
                <Font size="15.0" />
            </font>
            <toggleGroup>
                <ToggleGroup fx:id="postedAs" />
            </toggleGroup>
        </RadioButton>
        <RadioButton fx:id="post_postedAs_anonyme" layoutX="416.0" layoutY="284.0" mnemonicParsing="false" text="Anonyme" toggleGroup="$postedAs">
            <font>
                <Font size="15.0" />
            </font>
        </RadioButton>
        <Label layoutX="126.0" layoutY="14.0" text="Modifier la publication">
            <font>
                <Font size="36.0" />
            </font>
        </Label>
        <Button layoutX="169.0" layoutY="339.0" mnemonicParsing="false" fx:id="submitButton" onAction="#confirmer" text="Confirmer">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Button layoutX="340.0" layoutY="339.0" mnemonicParsing="false" fx:id="annulerButton" onAction="#annuler" text="Annuler">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
