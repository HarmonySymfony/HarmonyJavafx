<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.detailsPost">
    <children>
        <Label layoutX="30.0" layoutY="90.0" text="Post ID:" />
        <Label layoutX="150.0" layoutY="90.0" fx:id="postIdLabel" />
        <Label layoutX="30.0" layoutY="110.0" text="Contenu:" />
        <Label layoutX="150.0" layoutY="110.0" fx:id="contenuLabel" />
        <Label layoutX="30.0" layoutY="150.0" text="Date de création:" />
        <Label layoutX="150.0" layoutY="150.0" fx:id="dateCreationLabel" />
        <Label layoutX="30.0" layoutY="190.0" text="Dernière modification:" />
        <Label layoutX="150.0" layoutY="190.0" fx:id="lastModificationLabel" />
        <Label layoutX="30.0" layoutY="230.0" text="Posté en tant que:" />
        <Label layoutX="150.0" layoutY="230.0" fx:id="postedAsLabel" />

        <!-- Buttons -->
        <HBox layoutX="30.0" layoutY="270.0" spacing="10.0">
            <Button text="Modifier" onAction="#modifierAction" />
            <Button text="Supprimer" onAction="#supprimerAction" />
            <Button text="Afficher Commentaires" onAction="#afficherCommentairesAction" />
            <Button text="Retour à la liste" fx:id="retourButton" onAction="#retourAction" />
        </HBox>

    </children>
</AnchorPane>
